					afterInit: afterInit1
				});
				
				function afterAction1(){
					var dir1 = this.dragDirection;
					var number = this.currentItem;
					if(dir1 == 'left') { bgnext1() }
					if(dir1 == 'right'){ bgprev1() }
					carrosselCover1.trigger("owl.goTo",number);
